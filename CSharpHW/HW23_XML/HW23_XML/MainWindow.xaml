        <TextBox x:Name="price" HorizontalAlignment="Left" Height="23" Margin="38,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" />
        <TextBox x:Name="year" HorizontalAlignment="Left" Height="23" Margin="38,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <ComboBox x:Name="searchAtribute" HorizontalAlignment="Left" VerticalAlignment="Top" Width="151" Margin="253,45,0,0" Height="22" />
        <Button x:Name="Search" Content="Search" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" RenderTransformOrigin="6.333,1.5" Margin="416,45,0,0" Height="22" Click="Search_Click"/>
