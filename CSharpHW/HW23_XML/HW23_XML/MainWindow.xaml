        <Button x:Name="Add" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Margin="38,289,0,0" Click="Add_Click"/>
        <Label x:Name="label" Content="Description" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,209,0,0" Height="26" Width="180"/>
        <Label x:Name="label_Copy" Content="Year" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,160,0,0" Height="26" Width="180"/>
        <Label x:Name="label_Copy1" Content="Price" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,111,0,0" Height="26" Width="180"/>
        <Label x:Name="label_Copy2" Content="Title" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,61,0,0" Height="26" Width="180"/>
        <Label x:Name="label_Copy3" Content="Author" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,12,0,0" Height="26" Width="180"/>

    </Grid>
</Window>
