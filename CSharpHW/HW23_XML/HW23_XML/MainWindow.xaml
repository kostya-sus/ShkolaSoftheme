<Window x:Class="HW23_XML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW23_XML"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="searchText" HorizontalAlignment="Left" Height="22" Margin="253,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
        <TextBox x:Name="ShowPlace" HorizontalAlignment="Left" Height="214" Margin="246,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245"/>
        <TextBox x:Name="author" HorizontalAlignment="Left" Height="23" Margin="38,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
